---
// Layout
import Layout from "../layouts/Layout.astro";
import LightFooter from "../sections/global/light-footer.astro";
// Sections
import AmenitiesAndComfortSection from "../sections/aboutUs/amenitiesAndComfortSection.astro";
import CtaSection from "../sections/aboutUs/ctaSection.astro";
import ExperianceSection from "../sections/aboutUs/experianceSection.astro";
import HeroSection from "../sections/aboutUs/heroSection.astro";
import LocationSection from "../sections/aboutUs/locationSection.astro";
import OurStorySection from "../sections/aboutUs/ourStorySection.astro";
import OwnersSection from "../sections/aboutUs/ownersSection.astro";
import ReviewSection from "../sections/aboutUs/reviewSection.astro";
import UspSection from "../sections/aboutUs/uspSection.astro";

// pageData
import pageData from "../data/nl/about-us.json";
---

<Layout>
  <HeroSection sectionContent={pageData.intro} />
  <OurStorySection
    sectionContent={pageData.ourStory}
    sectionId="our-story-section"
  />
  <UspSection sectionContent={pageData.uspSection} sectionId="usp-section" />
  <ReviewSection
    sectionContent={pageData.reviewSection}
    sectionId="review-section"
  />
  <OwnersSection
    sectionContent={pageData.ownersSection}
    sectionId="owners-section"
  />
  <AmenitiesAndComfortSection
    sectionContent={pageData.amenitiesAndComfort}
    sectionId="amenities-and-comfort-section"
  />
  <LocationSection
    sectionContent={pageData.locationSection}
    sectionId="location-section"
  />
  <ExperianceSection
    sectionContent={pageData.experianceSection}
    sectionId="experiance-section"
  />
  <CtaSection
    sectionContent={pageData.ctaSection}
    sectionId="cta-section"
  />
  <LightFooter />
</Layout>
