---
// Layout
import Layout from "../layouts/Layout.astro";

// Sections
import HeroSection from "../sections/homepage/heroSection.astro";
import IntroSection from "../sections/homepage/introSection.astro";
import WhyGuestsLoveItSection from "../sections/homepage/whyGuestsLoveItSection.astro";
import SurroundingsSection from "../sections/homepage/surroundingsSection.astro";

// Page data
import data from "../data/nl/homepage.json";
import SingleReviewSection from "../sections/homepage/singleReviewSection.astro";
---

<Layout>
  <HeroSection sectionContent={data.hero} />
  <IntroSection sectionContent={data.intro} sectionId="intro-section" />
  <WhyGuestsLoveItSection
    sectionContent={data.whyGuestsLoveIt}
    sectionId="why-guests-love-it"
  />
  <SurroundingsSection
    sectionContent={data.surroundings}
    sectionId="suroundings-section"
  />
  <SingleReviewSection
    sectionContent={data.guestExperience}
    sectionId="suroundings-section"
  />
</Layout>
