---
// Layout
import Layout from "../layouts/Layout.astro";

// Sections
import DarkFooter from "../sections/global/dark-footer.astro";
import HeaderSection from "../sections/surroundings/headerSection.astro";
import ActivitysSection from "../sections/surroundings/activitysSection.astro";
import IdealLocationSection from "../sections/surroundings/idealLocationSection.astro";
import SingleReviewSection from "../sections/surroundings/singleReviewSection.astro";
import FullbleedReviewSection from "../sections/surroundings/fullbleedReviewSection.astro";
import SeasonsSection from "../sections/surroundings/seasonsSection.astro";
import RecomodationsSection from "../sections/surroundings/recomodationsSection.astro";
import ExplorationSection from "../sections/surroundings/explorationSection.astro";
import BestTimeToVisitSection from "../sections/surroundings/bestVisitTimeSection.astro";
import LastCallCtaSection from "../sections/surroundings/lastCallCtaSection.astro";

// Page data
import data from "../data/nl/surroundings.json";
---

<Layout>
  <HeaderSection sectionContent={data.hero} sectionId="header-section" />
  <IdealLocationSection
    sectionContent={data.idealLocationSection}
    sectionId="ideal-location-section"
  />
  <ActivitysSection
    sectionContent={data.experiences}
    sectionId="acitvitys-section"
  />
  <SingleReviewSection
    sectionContent={data.guestExperience}
    sectionId="single-review-section"
  />
  <FullbleedReviewSection
    sectionContent={data.guestExperienceWithBgImage}
    sectionId="fullbleed-review-section"
  />
  <SeasonsSection sectionContent={data.seasons} sectionId="seasons-section" />
  <RecomodationsSection
    sectionContent={data.recomodations}
    sectionId="recomodations-section"
  />
  <ExplorationSection sectionId="recomodations-section" />
  <BestTimeToVisitSection sectionId="best-time-to-visit-section" />
  <LastCallCtaSection sectionId="last-call-cta-section" />
  <DarkFooter />
</Layout>
