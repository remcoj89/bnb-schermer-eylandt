---
// Layout
import Layout from "../layouts/Layout.astro";
import DarkFooter from "../sections/global/dark-footer.astro";

// Sections

// pageData
import pageData from "../data/nl/contact.json";
import HeroSection from "../sections/contact/heroSection.astro";
import BookingCards from "../sections/contact/bookingCards.astro";
import ContactFormSection from "../sections/contact/contactFormSection.astro";
import DirectBookingSection from "../sections/contact/directBookingSection.astro";
import MapsSection from "../sections/contact/mapsSection.astro";
import ExploreTheArea from "../sections/contact/exploreTheArea.astro";
---

<Layout>
  <HeroSection sectionContent={pageData.intro} sectionId="hero-section" />
  <BookingCards
    sectionContent={pageData.bookingCards}
    sectionId="booking-cards-section"
  />
  <ContactFormSection
    sectionContent={pageData.contactSection}
    sectionId="form-section"
  />
  <DirectBookingSection
    sectionContent={pageData.airbnbBooking}
    sectionId="direct-booking-section"
  />
  <MapsSection sectionContent={pageData.location} sectionId="maps-section" />
  <ExploreTheArea
    sectionContent={pageData.exploreTheArea}
    sectionId="explore-the-area-section"
  />
  <DarkFooter />
</Layout>
