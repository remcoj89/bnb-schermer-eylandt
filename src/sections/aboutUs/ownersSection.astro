---
// Astro Assets
import { Image } from "astro:assets";
// Components
import SectionTitle from "../../components/global/sectionTitle.astro";
import Icon from "../../components/global/icon.astro";
import FlexSection from "../../components/global/flex-section.astro";
// Data
const { sectionContent, sectionId } = Astro.props;
---

<section id={sectionId}>
  <div class="wrapper">
    <FlexSection alignment="flex-align-center">
      <article>
        <SectionTitle sectionTitle={sectionContent.title} />
        <ul role="list">
          {
            sectionContent.list.map((item: any) => (
              <li>
                <Icon iconStyle={item.iconStyle} />
                <div>
                    <h3>{item.title}</h3>
                    <span>{item.text}</span>
                </div>
              </li>
            ))
          }
        </ul>

        <div class="quote">

            <quote>
                "{sectionContent.quote}"
            </quote>
        </div>
      </article>
      <picture>
        <Image
          alt={sectionContent.image.altText}
          height={500}
          src={sectionContent.image.url}
          width={500}
        />

        <div class="sticker">
            <span class="title">{sectionContent.sticker.title}</span>
            <span class="text">{sectionContent.sticker.text}</span>
        </div>
      </picture>
    </FlexSection>
  </div>
</section>


<style>
    article {
        width: 100%;

        ul {
            display: grid;
            gap: var(--size-2);

           li {
            display: flex;
            gap: var(--size-1);

            div {
                max-width: 55ch;
                h3 {
                    font-size: var(--fs-600);
                    line-height: 1.4;
                }
            }
           }
        }

        .quote {
            background-color: var(--clr-green-blue);
            border-radius: var(--border-radius-card);
            padding: var(--size-1);
            margin-block-start: var(--size-3);
        }
    }

    picture {
        border-radius: var(--border-radius-card-big);
        box-shadow: var(--box-shadow);
        height: 60rem;
        position: relative;
        width: 100%;
        z-index: 0;

        img {
            border-radius: inherit;
            height: 100%;
            object-fit: cover;
            width:100%;
        }

        .sticker {
            border-radius: var(--border-radius-card-big);
            background-color: var(--clr-off-white);
            box-shadow: var(--box-shadow);
            padding: var(--size-2);
            position: absolute;

            inset-block-end: -30px; 
            inset-inline-end: -30px; 
            z-index: 10;

            span {
                display: block;
            }

            span.title {
                font-size: var(--fs-500);
                font-weight: var(--fw-semi-bold);
            }
        }
    }
</style>