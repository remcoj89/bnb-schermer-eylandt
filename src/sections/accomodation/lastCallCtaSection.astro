---
// Components
import Button from "../../components/global/buttons.astro";

// Page Data
const { sectionContent, sectionId } = Astro.props;
---

<section id={sectionId}>
  <div class="wrapper cta-container">
    <h2>{sectionContent.title}</h2>
    <p>{sectionContent.description}</p>
    <div class="buttons-wrapper">
      <Button
      href={sectionContent.bookingButton.bookingLink.url}
      buttonStyle="white-btn"
        >{sectionContent.bookingButton.text}
      </Button>
      <a href={sectionContent.contactButton.link}
       id="contact" >{sectionContent.contactButton.text}</a
      >
    </div>
  </div>
</section>

<style>
  section {
    background-color: var(--clr-gold);
    color: var(--clr-white);

    .cta-container {
      align-items: center;
      display: flex;
      flex-direction: column;
      gap: var(--size-2);
      justify-content: center;
      text-align: center;
      transition: transform 0.5s ease-in-out;

      .buttons-wrapper {
        display: flex;
        gap: var(--size-2);
        align-items: center;

        #contact {
          text-decoration: underline;
          font-size: var(--fs-500);

          &:hover,
          &:focus {
            transform: scaleY(1.2);
          }
        }
      }
    }
  }
</style>
