---
// Components
import FiveStars from "../../components/global/fiveStars.astro";
// Page Data
const { sectionContent, sectionId } = Astro.props;
---

<section>
  <div class="wrapper review">
    <FiveStars />
    <p>"{sectionContent.quote}"</p>
    <span>- {sectionContent.author}</span>
  </div>
</section>

<style>
  section {
    background-color: var(--clr-green-blue);
    &::selection {
      background-color: var(--clr-gold);
      color: var(--clr-warm-sand);
    }

    .review {
      color: var(--clr-warm-sand);
      display: grid;
      justify-content: center;
      gap: var(--size-3);
      text-align: center;

      p {
        font-size: var(--fs-600);
        font-family: var(--ff-header);
      }
    }
  }
</style>
