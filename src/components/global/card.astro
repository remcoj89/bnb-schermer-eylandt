---
// Props
const { cardStyle = null } = Astro.props;
---

<div class=`card ${cardStyle}`>
  <slot />
</div>

<style>
  .card {
    align-items: center;
    border-radius: var(--border-radius-card);
    box-shadow: var(--box-shadow-light);
    padding: var(--padding-card);
  }

  .features-with-review {
    align-items: flex-start;
    box-shadow: var(--box-shadow);
    display: flex;
    flex-direction: column;
    gap: var(--size-3);
    justify-content: space-between;
    transition: all 0.4s ease-in-out;

    .card-title-wrapper {
      display: flex;
      gap: var(--size-1);

      h3 {
        font-size: var(--fs-600);
        line-height: 1.5;
      }
      img {
        border-radius: var(--border-radius-full);
        padding: 1rem;
        height: 50px;
        width: 50px;
      }
      img.gold-icon {
        background-color: var(--clr-gold);
      }
    }

    .review {
      background-color: var(--clr-warm-sand);
      border-radius: var(--border-radius-card);
      padding: var(--size-1);
      flex-grow: 1;
      display: grid;
      width: 100%;

      span {
        margin-block-start: auto;
      }
    }

    &:hover,
    &:focus {
      transform: scale(1.05);
      box-shadow: var(--box-shadow-gold);
    }
  }

  .usp-card {
    background-color: var(--clr-warm-sand);
    display: flex;
    flex-direction: column;
    gap: var(--size-1);
    text-align: center;
    transition: all 0.4s ease-in-out;

    img {
      border-radius: var(--border-radius-full);
      padding: 1rem;
      height: 50px;
      width: 50px;
    }

    img.grey-icon {
      background-color: var(--clr-light-gray);
    }

    img.green-icon {
      background-color: var(--clr-green-blue);
    }

    div {
      display: flex;
      flex-direction: column;
      gap: var(--size-1);
      height: 100%;
      justify-content: space-between;

      h3 {
        font-size: var(--fs-500);
      }
    }

    &:hover,
    &:focus {
      transform: scale(1.05);
      box-shadow: var(--box-shadow);
    }
  }

  .image-card {
    height: 30rem;
    overflow: hidden;
    position: relative;
    z-index: 2;

    img {
      height: 100%;
      inset: 0;
      object-fit: cover;
      object-position: center;
      position: absolute;
      z-index: 0;
    }
    h3 {
      border-radius: var(--border-radius-btn);
      color: var(--clr-warm-sand);
      font-size: var(--fs-500);
      inset-block-end: 10%;
      padding: 0.5rem;
      position: absolute;
      transition: all 0.4s ease-in-out;
      z-index: 2;
    }

    &::before {
      background-color: hsl(0, 0%, 15%, 55%);
      content: "";
      inset: 0;
      position: absolute;
      transition: all 0.4s ease-in-out;
      z-index: 1;
    }

    &:hover {
      h3 {
        background-color: hsl(0, 0%, 15%, 55%);
      }

      &::before {
        background-color: hsl(0, 0%, 15%, 0%);
      }
    }
  }

  .testemonial-card {
    background-color: var(--clr-warm-sand);
    display: flex;
    gap: var(--size-2);
    width: fit-content;
  }
</style>
