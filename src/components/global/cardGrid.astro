---
const { cardStyle = null } = Astro.props;
---

<div class=`card-grid ${cardStyle}`>
  <slot />
</div>

<style>
  .card-grid {
    align-items: stretch;
    display: grid;
    gap: var(--size-2);
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    width: 100%;

    a {
      text-decoration: none;
      height: 100%;
    }

  }

  .small-cards {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
</style>
