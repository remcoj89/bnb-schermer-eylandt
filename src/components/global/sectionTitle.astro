---
// Data
const { sectionTitle, subTitle = null, headerStyle = null, textStyle = null } = Astro.props;
---

<div class={`${headerStyle} ${textStyle}`}>
  <h2>{sectionTitle}</h2>
  { subTitle && <span>{subTitle}</span> }
</div>

<style>
  div {
    display: grid;
    gap: var(--size-1);
    margin-block-end: var(--size-4);
    max-width: 85ch;
  }
  .text-center {
    margin-inline: auto;
    text-align: center;
  }

  .on-dark-bg {
    color: var(--clr-dark-gray);
  }

  .white-text {
    color: var(--clr-off-white)
  }

</style>
